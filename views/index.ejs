<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    
    <!-- Bootstrap 4 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <style>
      nav ul li a.btn{
        color: black;
        font-weight: bold;
      }
      nav ul li a.btn.active{
        color: #fff !important;
      }
      nav ul li a.btn:hover{
        color: #fff !important;
      }
    </style>
    
    <title>REST CRUD WITH DOCKER</title>
</head>
<body>
<div class="page container mt-4">
 
    <h1 class="text-center py-3">First Rest Crud With docker</h1>

    <nav class="navbar-expand mb-4  navbar-light" >
      <ul class="navbar-nav ">
        <li class="nav-item"><a class="nav-link btn btn-outline-primary  btn mr-1 <% if (page_name === 'users') { %> active <% } %>"  href="/" >Users</a></li>
        <li class="nav-item"><a class="nav-link btn btn-outline-primary btn <% if (page_name === 'register') { %> active <% } %>"   href="/register">New User</a></li>
      </ul>
    </nav>

    <% if (typeof msg !== 'undefined' && msg.length > 0) { %>
      <div class="alert alert-danger fade show" role="alert">
        <strong><%= msg %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% } %>
    

    <h2>Users</h2>
      <table class="table table-dark" >
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <% if (users.length > 0) { %>
            <tbody>
              <% users.forEach(user => { %>
                  <tr>

                    <th scope="row"  class="col-1"><%= user.id %></th>
                    <td  class="col-1"><%= user.name %></td>
                    <td  class="col-1"><%= user.email %></td>
                    <td  class="col-1">
                      <div class="btn-group">
                        <a href="/users/edit/<%= user.id %>" class="btn btn-primary">Edit</a>

                        <form action="/users/<%= user.id %>?_method=DELETE" method="post">
                          <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                      </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          <% } %>

        </table>
</div>

    <!-- bootstrap4 JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>